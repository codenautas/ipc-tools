{
  "name": "ipc-tools",
  "description": "Herramientas para el desarrollo de un IPC",
  "version": "0.1.0",
  "author": "Emilio Platzer <emilioplatzer@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": "codenautas/ipc-tools",
  "contributors": [
    {
      "name": "Emilio Platzer",
      "email": "emilioplatzer@gmail.com"
    }
  ],
  "dependencies": {
    "xlsx": "~0.17.0"
  },
  "devDependencies": {
    "@types/express": "~4.17.11",
    "@types/fs-extra": "~9.0.6",
    "@types/js-yaml": "~4.0.0",
    "@types/mocha": "~8.2.0",
    "@types/node": "~14.14.22",
    "@types/send": "~0.14.6",
    "best-globals": "~0.10.31",
    "colors": "~1.4.0",
    "discrepances": "~0.2.6",
    "mixin-patch": "^0.3.5",
    "mocha": "~8.2.1",
    "nyc": "~15.1.0",
    "require-bro": "~0.2.2",
    "sinon": "~9.2.4",
    "source-map-support": "~0.5.19",
    "supertest": "~6.1.3",
    "ts-node": "~9.1.1",
    "typescript": "~4.1.3"
  },
  "main": "dist/tool/pre-tools.js",
  "types": "dist/tool/pre-tools.d.ts",
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "tsc": "tsc",
    "test": "npm run build && mocha --reporter spec --bail --check-leaks --exit work/test/",
    "test-ci": "node node_modules/nyc/bin/nyc --reporter=lcov --reporter=text-lcov node_modules/mocha/bin/_mocha --exit --check-leaks work/test/*.js",
    "test-cov": "nyc node_modules/mocha/bin/_mocha --exit --check-leaks work/test/*.js",
    "build": "tsc -p tsconfig-tool.json && tsc -p tsconfig-test.json && mixin-patch",
    "build-without-err": "(tsc -p tsconfig-tool.json || echo \"continue w/error\") && (tsc -p tsconfig-test.json  || echo \"continue w/error\")"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/test"
    ],
    "include": [
      "dist/**/*.js"
    ],
    "x-require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "check-coverage": true
  },
  "mixin-patch": {
    "copy": [
      {
        "from": "src/tool",
        "to": "dist"
      },
      {
        "from": "src/test",
        "to": "work/test"
      },
      {
        "from": "node_modules/xlsx/dist",
        "to": "dist/xlsx"
      },
      {
        "from": "node_modules/require-bro/lib",
        "to": "dist/require-bro"
      }
    ]
  },
  "qa-control": {
    "package-version": "0.3.0",
    "run-in": "server",
    "test-appveyor": true,
    "type": "lib",
    "stage": "designing",
    "coverage": 100
  }
}
